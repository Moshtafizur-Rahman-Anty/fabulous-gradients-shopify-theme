<section
  class="split-hero"
  aria-labelledby="split-hero-heading-{{ section.id }}"
>
  <div class="split-hero__inner page-width">
    <div class="split-hero__media">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 1600 | image_tag:
          loading: 'lazy',
          class: 'split-hero__image'
        }}
      {% endif %}
    </div>

    <div class="split-hero__content">
      {% if section.settings.heading != blank %}
        <h1
          id="split-hero-heading-{{ section.id }}"
          class="split-hero__heading"
        >
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.text != blank %}
        <div class="split-hero__text rte">
          {{ section.settings.text }}
        </div>
      {% endif %}

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a
          href="{{ section.settings.button_link }}"
          class="button button--primary"
        >
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Split hero",
  "tag": "section",
  "class": "section section-split-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Split hero heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Add supporting copy here.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Split hero"
    }
  ]
}
{% endschema %}
